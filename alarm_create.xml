<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="500dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">


        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textSize="15sp"
            android:layout_marginTop="0dp"
            android:background="@drawable/shape_rounded_var"
            android:text="Назад"
            android:layout_gravity="start" />


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/shape_rounded_var"
            android:text="Сохранить"
            android:layout_gravity="end" />
    </LinearLayout>


    <TimePicker

        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLayout"
        android:layout_marginTop="10dp"
        android:timePickerMode="spinner"
        android:theme="@style/CustomTimePicker" />


        <!-- Кнопка "Повтор" -->
    <Button
        android:id="@+id/repeat_button"
        android:layout_width="500dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_rounded_var"
        android:gravity="start|center_vertical"
        android:singleLine="false"
    android:layout_below="@+id/timePicker"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="500dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="23dp"
        android:text="Повтор"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:gravity="start|center_vertical"
        android:singleLine="false"
        android:layout_below="@+id/timePicker"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="297dp"
            android:text="Никогда >"
            android:textColor="#B8B8B8"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"/>


    <Button
        android:id="@+id/choose_music_button"
        android:layout_width="500dp"
        android:layout_height="44dp"

        android:layout_marginTop="3dp"
        android:background="@drawable/shape_rounded_var"
        android:gravity="start|center_vertical"
        android:text="Выбор мелодии"
        android:textSize="15sp"
        android:layout_below="@+id/repeat_button"/>

        <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="20dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="27dp"
        android:text="Нет мелодии"
        android:textAlignment="textEnd"
        android:layout_alignParentEnd="true"
        android:textColor="#B8B8B8" />

    <Button
        android:id="@+id/nazvanie"
        android:layout_width="500dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shape_rounded_var"
        android:gravity="start|center_vertical"
        android:text="Название"
        android:textSize="15sp"
        android:layout_below="@+id/choose_music_button"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/choose_music_button"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/name"
        android:gravity="end"
        android:textColor="#B8B8B8"
        android:textColorHint="#C3C3C3"/>


</RelativeLayout>
